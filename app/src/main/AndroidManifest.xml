<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.md.recipedia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
		android:largeHeap="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.RecipeMenuActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.MainRecipeActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.RecipeMenuActivity" />
        <activity
            android:name=".activity.RandomRecipeActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.HomeActivity" />

    </application>

</manifest>